{
  "name": "octokit",
  "version": "0.0.0-development",
  "type": "module",
  "description": "The all-batteries-included GitHub SDK for Browsers, Node.js, and Deno",
  "keywords": [
    "github",
    "api",
    "sdk",
    "octokit"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "repository": "github:octokit/octokit.js",
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.mjs && tsc -p tsconfig.json",
    "lint": "prettier --check \"{src,test,scripts}/**/*.{js,json,ts}\" \"*.{md,json}\"",
    "lint:fix": "prettier --write \"{src,test,scripts}/**/*.{js,json,ts,mjs}\" \"*.{md,json}\"",
    "pretest": "npm run -s lint",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage",
    "test:typescript": "npx tsc --noEmit --declaration --noUnusedLocals --esModuleInterop --module node16 --strict --allowImportingTsExtensions test/typescript-validate.ts"
  },
  "dependencies": {
    "@octokit/app": "^15.0.0",
    "@octokit/core": "^6.0.0",
    "@octokit/oauth-app": "^7.0.0",
    "@octokit/plugin-paginate-graphql": "^5.0.0",
    "@octokit/plugin-paginate-rest": "^11.0.0",
    "@octokit/plugin-rest-endpoint-methods": "^13.0.0",
    "@octokit/plugin-retry": "^7.0.0",
    "@octokit/plugin-throttling": "^9.0.0",
    "@octokit/request-error": "^6.0.0",
    "@octokit/types": "^13.0.0"
  },
  "devDependencies": {
    "@octokit/tsconfig": "^3.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.21.0",
    "fetch-mock": "npm:@gr2m/fetch-mock@^9.11.0-pull-request-644.1",
    "glob": "^10.2.4",
    "jest": "^29.0.0",
    "mockdate": "^3.0.5",
    "prettier": "3.3.1",
    "semantic-release-plugin-update-version-in-files": "^1.1.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.test.json",
          "useESM": true
        }
      ]
    },
    "testPathIgnorePatterns": [
      "/docs/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "moduleNameMapper": {
      "^(.+)\\.jsx?$": "$1"
    }
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "debug",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./pkg"
        }
      ],
      [
        "semantic-release-plugin-update-version-in-files",
        {
          "files": [
            "pkg/dist-web/*",
            "pkg/dist-node/*",
            "pkg/*/version.*"
          ]
        }
      ]
    ]
  },
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "provenance": true
  }
}
